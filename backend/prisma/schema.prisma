// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ScoreEntry {
  id                                  String                        @id @default(uuid())
  date                                DateTime
  level                               ScoreEntryLevel               @default(BEGINNER)
  score                               Int
  username                            String
}

enum ScoreEntryLevel {
  BEGINNER
  ADVANCED
  EXPERT
}
